@{
    ViewData["Title"] = "Profile";
}

<main>
    <header class="stick" style="transform: translate3d(0px, 0px, 0px); position: fixed; top: 0px;">
        <div class="logo-menu-sec">
            <div class="container">
                <div class="logo">
                    <h1 itemprop="headline">
                        <a href="Index" title="Home" itemprop="url"><img src="~/images/logo.png" alt="logo.png" itemprop="image"></a>
                    </h1>
                </div>
                <nav>
                    <div class="menu-sec">
                        <form class="restaurant-search-form brd-rd2" style="width: 70%;">
                            <div class="col-md-5 col-sm-4 col-lg-9">
                                <div class="input-field brd-rd4"><input class="brd-rd2" type="text" placeholder="Search dish here..."></div>
                            </div>
                            <div class="col-md-1 col-sm-2 col-lg-3">
                                <button class="brd-rd4 red-bg" type="submit">SEARCH</button>
                            </div>
                        </form>
                        <ul style="margin: 10px; float: right;">
                            <li><a href="Profile" title="CHANGE INFORMATION" itemprop="url">Huu Quoc</a></li>
                        </ul>
                        <!-- Current User Name -->
                    </div>
                </nav>
                <!-- Navigation -->
            </div>
        </div>
        <!-- Logo Menu Section -->
    </header>
    <!-- Header -->
    <section>
        <div class="block gray-bg top-padd30">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12">
                        <div class="sec-box">
                            <div class="dashboard-tabs-wrapper">
                                <div class="row">
                                    <div class="col-md-4 col-sm-12 col-lg-4">
                                        <div class="profile-sidebar brd-rd5 wow fadeIn" data-wow-delay="0.2s" style="visibility: visible; animation-delay: 0.2s; animation-name: fadeIn;">
                                            <div class="profile-sidebar-inner brd-rd5">
                                                <div class="user-info red-bg">
                                                    <div class="user-info-inner">
                                                        <h5 itemprop="headline">HUU QUOC</h5>
                                                        <span>huuquoc@gudfood.com</span>
                                                        <a class="brd-rd3 sign-out-btn yellow-bg" href="login-register.html" title="" itemprop="url"><i class="fa fa-sign-out"></i> SIGN OUT</a>
                                                    </div>
                                                </div>
                                                <ul class="nav nav-tabs">
                                                    <li class="active"><a href="#my-orders" data-toggle="tab" aria-expanded="true"><i class="fa fa-shopping-basket"></i> MY ORDERS</a></li>
                                                    <li><a href="#my-reviews" data-toggle="tab"><i class="fa fa-comments"></i> MY REVIEWS</a></li>
                                                    <li><a href="#account-settings" data-toggle="tab"><i class="fa fa-cog"></i> ACCOUNT SETTINGS</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-8 col-sm-12 col-lg-8">
                                        <div class="tab-content">
                                            <div class="tab-pane fade" id="my-reviews">
                                                <div class="tabs-wrp brd-rd5">
                                                    <h4 itemprop="headline">MY REVIEWS</h4>
                                                    <div class="review-list">
                                                        <div class="review-box brd-rd5">
                                                            <h4 itemprop="headline">HUU QUOC</h4>
                                                            <p itemprop="description">Pepsi giao tới nhà tan hết đá rồi, vừa không lạnh vừa nhạt toẹt. Hơi cáu nhưng vì bánh tráng trộn mlem mlem nên bỏ qua.</p>
                                                            <div class="review-info">
                                                                <div class="review-info-inner">
                                                                    <i class="red-clr">07/07/2021 - 12:30PM</i>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="review-box brd-rd5">
                                                            <h4 itemprop="headline">HUU QUOC</h4>
                                                            <p itemprop="description">Bún đậu mắm tôm thúi quá hmu hmu. Hình như mắm tôm hết hạn thì phải :'( Bún cũng có mùi chua chua.</p>
                                                            <div class="review-info">
                                                                <div class="review-info-inner">
                                                                    <i class="red-clr">13/04/2021 - 04:30PM</i>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- Review List -->
                                                </div>
                                            </div>
                                            <div class="tab-pane fade active in" id="my-orders">
                                                <div class="tabs-wrp brd-rd5">
                                                    <h4 itemprop="headline">MY ORDERS</h4>
                                                    <div class="order-list">
                                                        <div class="order-item brd-rd5">
                                                            <div class="order-info">
                                                                <h4 itemprop="headline">07/07/2021 - 12:30PM</h4>
                                                                <span class="price money">850000</span>
                                                                <span class="processing brd-rd3">PROCESSING</span>
                                                                <a class="brd-rd3 detail-popup-btn" href="#" title="Detail" itemprop="url" style="margin-left: 1rem;">Order Detail</a>
                                                                <a class="brd-rd3 feedback-popup-btn" href="#" title="Feedback" itemprop="url">Feedback</a>
                                                                <span class="red-clr" style="margin-top: 10px;">5th Avenue New York 68</span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="tab-pane fade" id="account-settings">
                                                <div class="tabs-wrp account-settings brd-rd5">
                                                    <h4 itemprop="headline">ACCOUNT SETTINGS</h4>
                                                    <div class="account-settings-inner">
                                                        <div class="row">
                                                            <div class="col-md-12 col-sm-12 col-lg-12">
                                                                <div class="profile-info-form-wrap">
                                                                    <form class="profile-info-form">
                                                                        <div class="row mrg20">
                                                                            <div class="col-md-12 col-sm-12 col-lg-12">
                                                                                <label>Full Name</label>
                                                                                <input class="brd-rd3" type="text" id="profile-name" placeholder="Enter Your Name">
                                                                            </div>
                                                                            <div class="col-md-12 col-sm-12 col-lg-12">
                                                                                <label>Phone Number</label>
                                                                                <input class="brd-rd3" type="text" id="profile-phone" placeholder="Enter Your Phone Number">
                                                                            </div>
                                                                            <div class="col-md-12 col-sm-12 col-lg-12">
                                                                                <label>Address</label>
                                                                                <input class="brd-rd3" type="text" id="profile-address" placeholder="Enter Your Address">
                                                                            </div>
                                                                        </div>
                                                                        <button class="red-bg brd-rd4" style="width: 22%; font-size: 13px; margin: 0px 230px" type="submit">SAVE</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Section Box -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="feedback-popup text-center">
        <div class="sign-popup-wrapper brd-rd5">
            <div class="sign-popup-inner brd-rd5">
                <a class="feedback-close-btn" href="#" title="" itemprop="url"><i class="fa fa-close"></i></a>
                <div class="sign-popup-title text-center">
                    <h4 itemprop="headline">FEEDBACK</h4>
                </div>
                <form class="sign-form">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-lg-12">
                            <textarea class="brd-rd3" style="margin-top: 1rem; font-size:12px;" placeholder="Write your feedback here... "></textarea>
                        </div>
                        <div class="col-md-12 col-sm-12 col-lg-12">
                            <button class="red-bg brd-rd3" type="submit">SEND</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="detail-popup text-center">
        <div class="sign-popup-wrapper brd-rd5">
            <div class="sign-popup-inner brd-rd5">
                <a class="detail-close-btn" href="#" title="" itemprop="url"><i class="fa fa-close"></i></a>
                <div class="sign-popup-title text-center">
                    <h4 itemprop="headline">ORDER DETAILS</h4>
                </div>
                <div class="row">
                    <div class "col-md-12 col-sm-12 col-lg-12">
                        <div class="order-list-wrapper">
                            <ul class="order-list-inner">
                                <li>
                                    <div class="dish-name">
                                        <h6 itemprop="headline">2 x Pizza Meatlovers</h6>
                                        <span class="price money">185000</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="dish-name">
                                        <h6 itemprop="headline">3 x Chicken Tandoori Special With Mozzarella</h6>
                                        <span class="price money">85000</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="dish-name">
                                        <h6 itemprop="headline">2 x Pizza Meatlovers</h6>
                                        <span class="price money">185000</span>
                                    </div>
                                </li>
                                <li>
                                    <div class="dish-name">
                                        <h6 itemprop="headline">2 x Pizza Meatlovers</h6>
                                        <span class="price money">185000</span>
                                    </div>
                                </li>
                            </ul>
                            <ul class="order-total red-bg" style="margin-bottom: 10px;">
                                <li><span>Sub total</span> <i class="money">158000</i></li>
                                <li><span>Delivery fee</span> <i class="money">70000</i></li>
                                <li>
                                    <hr style="width: 100%; margin: 0;">
                                </li>
                                <li><span style="top: 0%">Total</span> <i class="money">210000</i></li>
                            </ul>
                            <div>
                                <span>*Note: Don't put tomato sauce on pizza please.</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>